<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>
  <body>
    
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
      <h1>All Blogs</h1>

    <% if(blogs.length > 0){ %>
      <% blogs.forEach((blog) => { %>

<a href="/blogs/<%=blog._id %>"> 

        <h3><%= blog.title %></h3>
        <p><%= blog.description %></p>
        <p><%= blog.body %></p> </a>
      <% }) %>
    <% } else{ %>
      <p>There are no blogs to show. You can add one by going <a href="/blogs/create">here</a></p>
    <% } %>
    </div>

    
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
